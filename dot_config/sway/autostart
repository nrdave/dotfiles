# Programs that I want to start automatically
exec 'steam -silent'
exec 'flatpak run com.spotify.Client'
exec 'flatpak run org.mozilla.Thunderbird'
exec swaymsg 'workspace 2; exec firefox'

# Rules for some autostart programs
assign [app_id="spotify"] workspace 4
assign [app_id="steam"] workspace 3
assign [app_id="org.mozilla.Thunderbird"] workspace 5
assign [app_id="firefox"] workspace 2
